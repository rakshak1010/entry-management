<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

<header>
    <%- include('partials/header', {title: title}); %>
</header>

<main class="pt-4">
      <div class="row align-items-center">
        <div class="col-md-6 offset-md-3 text-center">
	        <h1 class="text-center">Register Host</h1>
	        <form action="/host" method="POST">
					  <div class="form-group">
					    <input type="string" name="host_name" class="form-control mt-4" placeholder="Enter Name" required="true">
					    <input type="email" name="host_email" class="form-control mt-2" placeholder="Enter Email" required="true">
					    <input type="string" name="host_phone" class="form-control mt-2" placeholder="Enter Contact Details" required="true">
					    <input type="string" name="host_address" class="form-control mt-2" placeholder="Enter Address" required="true">
					  </div>
					  <button type="submit" class="btn btn-primary align-center">Register</button>
					</form>
			</div>
		</div>
</main>

<footer>
    <%- include('partials/footer') %>
</footer>

</body>
</html>